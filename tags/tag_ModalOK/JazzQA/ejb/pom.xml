<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>JazzQA</groupId>
	<artifactId>JazzQA.ejb</artifactId>
	<packaging>jar</packaging>
	<name>EJB - Componentes de Negocio</name>
	<parent>
		<groupId>JazzQA</groupId>
		<artifactId>JazzQA</artifactId>
		<version>1.0</version>
	</parent>
	<dependencies>

		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjrt</artifactId>
			<version>1.6.8</version>
		</dependency>

		<dependency>
			<groupId>javax.annotation</groupId>
			<artifactId>jsr250-api</artifactId>
			<version>1.0</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>javax.persistence</groupId>
			<artifactId>persistence-api</artifactId>
			<version>1.0</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>JazzQA</groupId>
			<artifactId>JazzQA.core</artifactId>
			<version>${project.parent.version}</version>
		</dependency>

		<!-- 
 -->
		<dependency>
			<groupId>javax.ejb</groupId>
			<artifactId>ejb-api</artifactId>
			<version>3.0</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>

				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>



					<generateClient>true</generateClient>

					<clientExcludes>
						<clientExcludes>**/ejb-jar.xml</clientExcludes>
						<clientExcludes>**/jboss.xml</clientExcludes>
						<clientExcludes>**/*Ejb.class</clientExcludes>
						<clientExcludes>**/*Bean.class</clientExcludes>
					</clientExcludes>


					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
						<manifestEntries>
							<mode>development</mode>
							<url>${pom.url}</url>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<version>1.0-alpha-5</version>
			</plugin>
		</plugins>
	</build>
</project>