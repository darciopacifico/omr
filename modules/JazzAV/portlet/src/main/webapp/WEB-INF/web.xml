		<description>Servlet para receber notificacoes do pagseguro</description>
		<display-name>notificacaoServlet</display-name>
		<servlet-name>notificacaoServlet</servlet-name>
		<servlet-class>br.com.dlp.jazzomr.notificacao.NotificacaoServlet</servlet-class>
	</servlet>
