		<display-name>pagSeguroRetornoServlet</display-name>
		<servlet-name>pagSeguroRetornoServlet</servlet-name>
		<servlet-class>br.com.dlp.jazzomr.anuncio.PagSeguroRetornoServlet</servlet-class>
	</servlet>
