<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>msaf.validador</groupId>
	<artifactId>msaf.validador.ear</artifactId>
	<name>Validador-EAR</name>
	<packaging>ear</packaging>
	<parent>
		<groupId>msaf.validador</groupId>
		<artifactId>msaf.validador</artifactId>
		<version>1.0</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>msaf.validador</groupId>
			<artifactId>msaf.validador.jmsconsumer</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>msaf.validador</groupId>
			<artifactId>msaf.validador.ejb</artifactId>
			<version>${project.parent.version}</version>
			<exclusions>
				<exclusion>
					<groupId>javax.ejb</groupId>
					<artifactId>ejb-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>msaf.validador</groupId>
			<artifactId>msaf.validador.web</artifactId>
			<version>${project.parent.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>msaf.validador</groupId>
			<artifactId>msaf.validador.core</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
	      <plugin>
	        <artifactId>maven-ear-plugin</artifactId>
	        <configuration>
	          <modules>
	             <ejbModule>
					<groupId>msaf.validador</groupId>
					<artifactId>msaf.validador.jmsconsumer</artifactId>
	             </ejbModule>
	          </modules>
	        </configuration>
	      </plugin>
		</plugins>
	</build>
</project>